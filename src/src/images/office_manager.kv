<Full_Image>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: "src/images/Background_2.png" 
        BoxLayout:
            orientation: 'horizontal'   
            canvas:
                Color:
                    rgb: (1, 1, 1)
                Rectangle: 
                    size: self.width + 20, self.height + 20
                    pos: self.x - 10, self.y - 10
            Image:
                source: "src/images/qr_code.png"
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .1
            Button:
                size_hint_x: .25
                text: 'Return'
                group: 'send_message'
                font_size: 20
                background_color: (0,0,0,0)
                canvas:
                    Rectangle:
                        source: 'src/images/modern_message_block.png'
                        pos: self.pos
                        size: self.size 
                on_press:
                    app.root.current = "Dashboard"
            Label:
                size_hint_x: .5
                text: 'Scan to Send Email'
                group: 'name'
                font_size: 25
            Button:
                text: 'IDK' 
                size_hint_x: .25
                group: 'sign_out'
                font_size: 20
                background_color: (0,0,0,0)
                canvas:
                    Rectangle:
                        source: 'src/images/modern_message_block.png'
                        pos: self.pos
                        size: self.size


