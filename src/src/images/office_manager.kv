<Set_Up_Phone>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: "src/images/Background_2.png" 
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: .3
            Label:
                text: 'To Set Up Phone'
                font_size: 35
                 
        BoxLayout:
            orientation: 'vertical'
            Label:
                halign: 'left'
                valign: 'top'
                text: '1) Send text message to your email\n'
                text_size: self.size
                font_size: 40
                canvas.before:
                    BorderImage:
                        source: 'src/images/modern_message_block2.png'
                        pos: self.pos
                        size: self.size







<Set_Up_Calendar>:
    id: Set_Up_Calendar
    BoxLayout:
