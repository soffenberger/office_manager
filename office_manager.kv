#:kivy 1.8
#: import ScreenManager kivy.uix.screenmanager.ScreenManager
#: import Screen kivy.uix.screenmanager.ScreenManager
#: import About_Us screen
#: import SignIn screen
#: import get_color_from_hex kivy.utils.get_color_from_hex
#: import Clock kivy.clock.Clock
#: import Image kivy.uix.image.Image


ScreenManager:
    id: screen_manager
    #transition: FadeTransition()
    MenuScreen:
        id: menu_screen
        name: 'Menu'
        manager: 'screen_manager'
    SignIn:
        id: SignIn
        name: 'SignIn'
        manager: 'screen_manager'
    About_Us: 
        id: About_Us
        name: 'About_Us'
        manager: 'screen_manager'
    Dashboard:
        id: Dashboard
        name: 'Dashboard'
        manager: 'screen_manager'
    Alert:
        id: Alert
        name: 'Alert'
        manager: 'screen_manager'
    Full_Image:
        id: Full_Image
        name: 'Full_Image'
        manager: 'screen_manager' 

<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Office Manager'
            font_size: 30
        Button:
            text: 'Dashboard'
            font_size: 30
            on_release: app.root.current = 'Dashboard'
        Button:
            text: 'Sign In'
            font_size: 30
            on_release: app.root.current = 'SignIn'
        Button:
            text: 'About Us'
            font_size: 30
            on_release: app.root.current = 'About_Us'

<Full_Image>:
    on_enter: Clock.schedule_once(app.root.switch_to(app.root.get_screen("Dashboard"), direction='left'), 30)

    canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle: 
            size: self.width + 20, self.height + 20
            pos: self.x - 10, self.y - 10
    Image:
        source: "qr_code.png"
      
        



<Dashboard>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            #size_hint_x: .8
            #width: 200
            orientation: 'horizontal'
            Label:
                text: "MON\n" + root.text[0]
                group: 'week_days'
                font_size: 30
                color: get_color_from_hex("#FFFFFF")
                text_size: self.size
                canvas.before:
                    Color:
                        rgba: get_color_from_hex("#00796B")
                    Rectangle:
                        pos: self.pos
                        size: self.size 
            Label:
                text: "TUES\n" + root.text[1]
                group: 'week_days'
                font_size: 30
                color: get_color_from_hex("#FFFFFF")
                text_size: self.size
                canvas.before:
                    Color:
                        rgba: get_color_from_hex("#00796B")
                    Rectangle:
                        pos: self.pos
                        size: self.size
            Label:
                text: "WED\n" + root.text[2]
                group: 'week_days'
                font_size: 30
                color: get_color_from_hex("#FFFFFF")
                text_size: self.size
                canvas.before:
                    Color:
                        rgba: get_color_from_hex("#00796B")
                    Rectangle:
                        pos: self.pos
                        size: self.size 
            Label:
                text: "THUR\n" + root.text[3]
                text_size: self.size
                group: 'week_days'
                font_size: 30
                color: get_color_from_hex("#FFFFFF")
                canvas.before:
                    Color:
                        rgba: get_color_from_hex("#00796B")
                    Rectangle:
                        pos: self.pos
                        size: self.size
            Label:
                text: "Fri\n" + root.text[4]
                group: 'week_days'
                text_size: self.size
                font_size: 30
                color: get_color_from_hex("#FFFFFF")
                canvas.before:
                    Color:
                        rgba: get_color_from_hex("#00796B")
                    Rectangle:
                        pos: self.pos
                        size: self.size
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .1
            Button:
                size_hint_x: .25
                text: 'Leave Message'
                group: 'send_message'
                font_size: 20
                on_press:
                    app.root.current = "Full_Image"
            Label:
                size_hint_x: .5
                text: root.uname
                group: 'name'
                font_size: 20
            Button:
                size_hint_x: .25
                text: 'Sign Out'
                group: 'sign_out'
                font_size: 20

<Alert>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            #size_hint_x: .8
            #width: 200
            orientation: 'horizontal'
            Label:
                text: root.text[0]
                group: 'week_days'
                font_size: 30
                color: get_color_from_hex("#FFFFFF")
                canvas.before:
                    Color:
                        rgba: get_color_from_hex("#00796B")
                    Rectangle:
                        pos: self.pos
                        size: self.size  
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .1
            ToggleButton:
                size_hint_x: .25
                text: 'Leave Message'
                group: 'send_message'
                font_size: 20
            Label:
                size_hint_x: .5
                text: 'Insert Name Here'
                group: 'name'
                font_size: 20
            ToggleButton:
                size_hint_x: .25
                text: 'Sign Out'
                group: 'sign_out'
                font_size: 20


<SignIn>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Game Length in Days'
                font_size: 30
            BoxLayout:
                orientation: 'horizontal'
                ToggleButton:
                    text: '100'
                    state: 'down'
                    group: 'newgame_days'
                    font_size: 30
                ToggleButton:
                    text: '200'
                    group: 'newgame_days'
                    font_size: 30
            BoxLayout:
                orientation: 'horizontal'
                ToggleButton:
                    text: '365'
                    group: 'newgame_days'
                    font_size: 30
                ToggleButton:
                    text: '3650'
                    group: 'newgame_days'
                    font_size: 30
            ToggleButton:
                text: 'Unlimited'
                group: 'newgame_days'
                font_size: 30
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, .5)
            Label:
                text: 'Difficulty (Score Multiplier)'
                font_size: 30
            BoxLayout:
                orientation: 'horizontal'
                ToggleButton:
                    text: 'Easy (x1)'
                    state: 'down'
                    group: 'newgame_difficulty'
                    font_size: 30
                ToggleButton:
                    text: 'Medium (x2.5)'
                    group: 'newgame_difficulty'
                    font_size: 30
                ToggleButton:
                    text: 'Hard (x5)'
                    group: 'newgame_difficulty'
                    font_size: 30
<About_Us>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'load a game'
            font_size: 30
        Widget:
            canvas:
                Ellipse:
                    pos: self.pos
                    size: self.size
        BoxLayout:
            Button:
                text: 'Menu'
                font_size: 30
                on_release: app.root.current = 'menu'
            Button:
                text: 'text'
                font_size: 30



