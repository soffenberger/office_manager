ScreenManager:
    id: screen_manager
    #transition: FadeTransition()
    MenuScreen:
        id: menu_screen
        name: 'Menu'
        manager: 'screen_manager'
    SignIn:
        id: SignIn
        name: 'SignIn'
        manager: 'screen_manager'
    About_Us: 
        id: About_Us
        name: 'About_Us'
        manager: 'screen_manager'
    Dashboard:
        id: Dashboard
        name: 'Dashboard'
        manager: 'screen_manager'
    Alert:
        id: Alert
        name: 'Alert'
        manager: 'screen_manager'
    Full_Image:
        id: Full_Image
        name: 'Full_Image'
        manager: 'screen_manager' 

<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Office Manager'
            font_size: 30
        Button:
            text: 'Dashboard'
            font_size: 30
            on_release: app.root.current = 'Dashboard'
        Button:
            text: 'Set Up'
            font_size: 30
            on_release: app.root.current = 'SignIn'
        Button:
            text: 'About Us'
            font_size: 30
            on_release: app.root.current = 'About_Us'



<Full_Image>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            #size_hint_x: .8
            #width: 200
            orientation: 'horizontal'   
            canvas:
                Color:
                    rgb: (1, 1, 1)
                Rectangle: 
                    size: self.width + 20, self.height + 20
                    pos: self.x - 10, self.y - 10
            Image:
                source: "qr_code.png"
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .1
            Button:
                size_hint_x: .25
                text: 'Return'
                group: 'send_message'
                font_size: 20
                on_press:
                    app.root.current = "Dashboard"
            Label:
                size_hint_x: .5
                text: 'Scan to Send Email'
                group: 'name'
                font_size: 25
            Button:
                text: 'IDK' 
                size_hint_x: .25
                group: 'sign_out'
                font_size: 20
        
 
        



