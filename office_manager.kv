<SignIn>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Send a Text to your gmail'
                font_size: 30
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Is This the Number'
                font_size: 30
        BoxLayout:
            orientation: 'vertical'
            Label:
                id: msg
                text: root.number
                font_size: 30 
            Button:
                id: "Yes"
                text: 'Yes'
                on_press:
                    root.leave()
                
            Button:
                id: "No"
                text: "No"
                on_press:
                    root.refresh()
            

