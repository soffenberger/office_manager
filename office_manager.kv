<Alert>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            Label:
                id: almsg
                text: root.msg
                group: 'week_days'
                font_size: 40
                outline_width: 6
                outline_color: get_color_from_hex("#FFFFFF")
                color: get_color_from_hex("#000000")
                canvas.before:
                    BorderImage:
                        source: 'images/misc/alert.jpg'
                        pos: self.pos
                        size: self.size 
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .1
            Button:
                size_hint_x: .25
                text: 'Leave Message'
                group: 'send_message'
                font_size: 20
